{% import "bootstrap/wtf.html" as wtf %}

extends base
block main
  div.outer
    div.main
      .row
        .col-sm-2
          h2 {{title}}
      .row.form-area
        .col-sm-2
          form(id="form", method='POST', role='form')
            {{wtf.quick_form(response, button_map={'submit':'primary'})}}
          meta(id="event-data", data="{{event}}")
        
