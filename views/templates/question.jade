extends base
block main
  div.outer
    div.main
      .row
        .col-sm-2
          h2 We're trying to document who is signed-up. Are you currently signed up for Michigan for Revolution?
      .row.form-area
        .col-sm-2
          form(id = "form",method='POST', role='form')
            ul
              li
                input.btn.btn-success.submit(type="submit", name="submit", value="Yes") Yes
              li
                input.btn.btn-primary.submit(type="submit", name="submit", value="Sign-up") No, but sign me up!
              li
                input.btn.btn-danger.submit(type="submit", name="submit", value="No") Not interested
